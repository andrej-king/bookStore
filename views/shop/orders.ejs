<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (typeof orders != "undefined") { %>
        <% if(orders.length > 0) { %>

            <ul class="orders">
            <% orders.reverse().forEach(order => { %>
                <li class="orders__item">
                    <h2 class="order__item-title">Order - # <%= order._id %></h2>
                    <ul class="orders__item-list">
                        <% order.items.forEach(product => { %>
                            <li class="orders__item-list-products">
                                <img class="img-thumbnail-order" src="<%= product.imageUrl %>" alt="">
                                <a href="/products/<%= product._id %>" class="link-info"><%= product.title %> (<%= product.qty %>)</a>
                            </li>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
            </ul>


        <% } else { %>
            <h1>Your order list is empty</h1>
        <% } %>
    <% } else { %>
        <h1>Your order list is empty</h1>
    <% } %>
</main>
<%- include('../includes/footer.ejs') %>